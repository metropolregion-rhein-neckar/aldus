{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "es6"
        ],
        "module": "commonjs",
        "outDir": "./dist",
        "moduleResolution": "node",
        "strict": true,
        "target": "es6",
    },
    "exclude": [
        "./tests/",
        "./node_modules/",
        "./dist/"
    ],
    "include": [
        "./src/**/*"
    ]
}